<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/scroller"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--comment -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="60sp"
                android:id="@+id/textTitle"
                android:gravity="center"
                android:fontFamily="@font/barberry_regular"
                android:textColor="@android:color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textTitle"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorTranspPrimary"
                android:text="25.09.2016"
                android:textSize="20dp"
                android:id="@+id/dateTextView"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="18dp"
                    android:textColor="@color/textColorPrimary"
                    android:textStyle="italic"
                    android:id="@+id/textDesc"
                    android:layout_below="@+id/textTitle"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:textAlignment="gravity"
                    android:padding="10dp"/>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_marginLeft="6dp"
                     android:layout_marginRight="6dp"
                     android:id="@+id/imageContentLayout"
                     android:visibility="visible">
                     <LinearLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/briefcase"
                            android:layout_gravity="center"/>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:id="@+id/businessTextView"
                             android:text="Business: 5"
                             android:textStyle="italic"
                             android:textSize="18dp"
                             android:textColor="@color/textColorPrimary"
                             android:layout_gravity="center"/>
                     </LinearLayout>
                     <LinearLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:orientation="vertical">
                         <ImageView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:src="@drawable/heart"
                             android:layout_gravity="center"/>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:id="@+id/loveTextView"
                             android:text="Love: 5"
                             android:textStyle="italic"
                             android:textSize="18dp"
                             android:textColor="@color/textColorPrimary"
                             android:layout_gravity="center"/>
                     </LinearLayout>
                     <LinearLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:orientation="vertical">
                         <ImageView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:src="@drawable/red_cross"
                             android:layout_gravity="center"/>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:id="@+id/healthTextView"
                             android:textStyle="italic"
                             android:text="Health: 5"
                             android:textSize="18dp"
                             android:textColor="@color/textColorPrimary"
                             android:layout_gravity="center"/>
                     </LinearLayout>

                 </LinearLayout>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>